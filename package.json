{
  "name": "post-tool-linter-hook",
  "version": "1.0.0",
  "description": "Post-tool linter hook for Claude Code",
  "main": "post-tool-linter-hook.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch", 
    "test:ci": "jest --coverage --ci --watchAll=false",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "node package-hook.js --clean",
    "build:dev": "node package-hook.js --format folder --output ./dist-dev",
    "build:release": "node package-hook.js --clean --format zip",
    "build:quick": "npm run lint && node package-hook.js --clean",
    "prebuild": "npm run lint && npm run test"
  },
  "keywords": ["claude-code", "linter", "hook", "automation"],
  "author": "Claude Code Hook System",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "eslint": "^9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "*.js",
      "!test-*.js",
      "!jest.config.js",
      "!eslint.config.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      },
      "./post-tool-linter-hook.js": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/*.test.js",
      "**/*.spec.js"
    ]
  }
}